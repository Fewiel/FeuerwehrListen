@implements IDisposable

@code {
    protected override void OnInitialized()
    {
        AuthService.OnAuthStateChanged += OnAuthStateChanged;
        SidebarService.OnStateChanged += OnSidebarStateChanged;
    }

    private void OnAuthStateChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    private void OnSidebarStateChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    private void ToggleCollapse()
    {
        SidebarService.ToggleCollapse();
    }

    private async Task HandleLogout()
    {
        try
        {
            AuthService.Logout();
            await InvokeAsync(StateHasChanged);
            await Task.Delay(50);
            Navigation.NavigateTo("/login", true);
        }
        catch (Exception ex)
        {
            // optional: UI-Fehlermeldung (keine Console-Ausgabe)
        }
    }

    public void Dispose()
    {
        AuthService.OnAuthStateChanged -= OnAuthStateChanged;
        SidebarService.OnStateChanged -= OnSidebarStateChanged;
    }
}

